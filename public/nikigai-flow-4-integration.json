{
  "flow_name": "Nikigai Flow 4: Integration & Mission",
  "version": "1.0",
  "description": "Bring together skills, problems, and persona to create your mission and opportunity map.",
  "pillar": "integration",
  "steps": [
    {
      "id": "1.0",
      "step_order_index": 1,
      "assistant_prompt": "You've done incredible work discovering your:\n\n• **Skills** — what you're naturally good at\n• **Problems** — the change you want to create\n• **Persona** — who you're most qualified to serve\n\nNow let's bring it all together into your unique Nikigai — the intersection where your gifts meet the world's needs.\n\nReady to see the full picture?",
      "expected_inputs": [
        {
          "type": "single_select",
          "options": ["Show me!"]
        }
      ],
      "next_step_rules": [
        {
          "on_selection": "Show me!",
          "go_to": "2.0"
        }
      ]
    },
    {
      "id": "2.0",
      "step_order_index": 2,
      "assistant_postprocess": {
        "tag_from": [
          "skills.final",
          "problems.final",
          "persona.final"
        ],
        "generate": {
          "type": "integration_summary",
          "output": "Display all finalized clusters from Skills, Problems, and Persona flows. Show each cluster with its label and key items. Use clear markdown formatting with headers and bullet points."
        },
        "store_as": "nikigai.integration_summary"
      },
      "next_step_rules": [
        {
          "on_success": "3.0"
        }
      ]
    },
    {
      "id": "3.0",
      "step_order_index": 3,
      "assistant_prompt": "Now let's find the combination that excites you most!\n\nUse the sliders below to explore different combinations of your problems, personas, and skills. Slide through each to find what resonates.\n\nOnce you've found your favorite combination, hit confirm!",
      "expected_inputs": [
        {
          "type": "cluster_sliders"
        }
      ],
      "store_as": "nikigai.opportunity_choice",
      "next_step_rules": [
        {
          "on_success": "4.0"
        }
      ]
    },
    {
      "id": "4.0",
      "step_order_index": 4,
      "assistant_prompt": "Is this combination an opportunity you're already pursuing or a new opportunity?",
      "expected_inputs": [
        {
          "type": "single_select",
          "options": ["Existing Opportunity", "New Opportunity"]
        }
      ],
      "store_as": "nikigai.opportunity_type",
      "next_step_rules": [
        {
          "on_selection": "Existing Opportunity",
          "go_to": "4.1-existing"
        },
        {
          "on_selection": "New Opportunity",
          "go_to": "4.1-new"
        }
      ]
    },
    {
      "id": "4.1-existing",
      "step_order_index": 5,
      "assistant_prompt": "What stage of development is this current opportunity?",
      "expected_inputs": [
        {
          "type": "single_select",
          "options": [
            "Still creating",
            "In process of launching",
            "Launched and delivering consistently"
          ]
        }
      ],
      "store_as": "nikigai.opportunity_stage",
      "metadata": {
        "stage_mapping": {
          "Still creating": "creation",
          "In process of launching": "testing",
          "Launched and delivering consistently": "launched"
        },
        "add_to_flow_tracker": true
      },
      "next_step_rules": [
        {
          "on_success": "4.2-complete"
        }
      ]
    },
    {
      "id": "4.1-new",
      "step_order_index": 5,
      "assistant_prompt": "Would you like to start pursuing this opportunity and add it to your flow tracker?",
      "expected_inputs": [
        {
          "type": "single_select",
          "options": [
            "Yes",
            "No, I want to focus on a different opportunity"
          ]
        }
      ],
      "store_as": "nikigai.pursue_opportunity",
      "metadata": {
        "if_yes_add_to_flow_tracker": true,
        "if_yes_stage": "validation"
      },
      "next_step_rules": [
        {
          "on_selection": "Yes",
          "go_to": "4.2-complete"
        },
        {
          "on_selection": "No, I want to focus on a different opportunity",
          "go_to": "4.2-new-details"
        }
      ]
    },
    {
      "id": "4.2-new-details",
      "step_order_index": 6,
      "assistant_prompt": "What do you call this opportunity?",
      "expected_inputs": [
        {
          "type": "free_text"
        }
      ],
      "store_as": "nikigai.opportunity_name",
      "next_step_rules": [
        {
          "on_success": "4.3-new-details"
        }
      ]
    },
    {
      "id": "4.3-new-details",
      "step_order_index": 7,
      "assistant_prompt": "What do you call your role in this opportunity?",
      "expected_inputs": [
        {
          "type": "free_text"
        }
      ],
      "store_as": "nikigai.opportunity_role",
      "next_step_rules": [
        {
          "on_success": "4.4-new-details"
        }
      ]
    },
    {
      "id": "4.4-new-details",
      "step_order_index": 8,
      "assistant_prompt": "Who is the target audience for this opportunity?",
      "expected_inputs": [
        {
          "type": "free_text"
        }
      ],
      "store_as": "nikigai.opportunity_audience",
      "next_step_rules": [
        {
          "on_success": "4.5-new-details"
        }
      ]
    },
    {
      "id": "4.5-new-details",
      "step_order_index": 9,
      "assistant_prompt": "What problem do you solve in this opportunity?",
      "expected_inputs": [
        {
          "type": "free_text"
        }
      ],
      "store_as": "nikigai.opportunity_problem",
      "next_step_rules": [
        {
          "on_success": "4.6-new-stage"
        }
      ]
    },
    {
      "id": "4.6-new-stage",
      "step_order_index": 10,
      "assistant_prompt": "What stage of development is this opportunity?",
      "expected_inputs": [
        {
          "type": "single_select",
          "options": [
            "Still creating",
            "In process of launching",
            "Launched and delivering consistently"
          ]
        }
      ],
      "store_as": "nikigai.opportunity_stage",
      "metadata": {
        "stage_mapping": {
          "Still creating": "creation",
          "In process of launching": "testing",
          "Launched and delivering consistently": "launched"
        },
        "add_to_flow_tracker": true
      },
      "next_step_rules": [
        {
          "on_success": "4.2-complete"
        }
      ]
    },
    {
      "id": "4.2-complete",
      "step_order_index": 11,
      "assistant_prompt": "Congratulations! You've completed your Flow Finder discovery. This is the foundation for meaningful, fulfilling work that only *you* can do. Ready to take action?",
      "expected_inputs": [
        {
          "type": "single_select",
          "options": [
            "Proceed to 7-day challenge",
            "Return to home page"
          ]
        }
      ],
      "store_as": "nikigai.completion",
      "next_step_rules": [
        {
          "on_selection": "Proceed to 7-day challenge",
          "go_to": "complete",
          "redirect": "/7-day-challenge"
        },
        {
          "on_selection": "Return to home page",
          "go_to": "complete",
          "redirect": "/me"
        }
      ]
    }
  ]
}
